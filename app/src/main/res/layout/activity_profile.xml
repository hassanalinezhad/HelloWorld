<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    >



    <View
        android:id="@+id/main_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/nav1"
        app:layout_constraintBottom_toBottomOf="@id/nav2"
        android:background="@drawable/back1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="700dp"
        android:background="@color/black"
        android:id="@+id/nav1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="700dp"
        android:background="@color/black"
        android:id="@+id/nav2"/>


    <View
        android:id="@+id/glass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        app:layout_constraintTop_toTopOf="@id/nav1"
        app:layout_constraintBottom_toBottomOf="@id/nav2"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"/>

    <View
        android:id="@+id/line_1"
        android:layout_width="250dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@id/glass"
        app:layout_constraintStart_toStartOf="@id/glass"
        app:layout_constraintEnd_toEndOf="@id/glass"
        android:background="@color/white"
        android:layout_marginTop="350dp"
        />

    <View
        android:id="@+id/line_2"
        android:layout_width="250dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@id/line_1"
        app:layout_constraintStart_toStartOf="@id/glass"
        app:layout_constraintEnd_toEndOf="@id/glass"
        android:background="@color/white"
        android:layout_marginTop="70dp"
        />

    <View
        android:id="@+id/line_3"
        android:layout_width="250dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@id/line_2"
        app:layout_constraintStart_toStartOf="@id/glass"
        app:layout_constraintEnd_toEndOf="@id/glass"
        android:background="@color/white"
        android:layout_marginTop="70dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/c_white"
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:cardCornerRadius="250dp"
        app:layout_constraintTop_toTopOf="@id/glass"
        app:layout_constraintEnd_toEndOf="@id/glass"
        app:layout_constraintStart_toStartOf="@id/glass"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/white"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/circle_null"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="250dp"
        app:layout_constraintTop_toTopOf="@id/glass"
        app:layout_constraintEnd_toEndOf="@id/glass"
        app:layout_constraintStart_toStartOf="@id/glass"
        android:layout_marginTop="60dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@id/glass"
            app:layout_constraintEnd_toEndOf="@id/glass"
            app:layout_constraintStart_toStartOf="@id/glass"
            android:src="@drawable/profile_tell"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_pageprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Language's List"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="@id/glass"

        app:layout_constraintStart_toStartOf="@id/glass"
        app:layout_constraintTop_toTopOf="@id/line_3" />

    <TextView
        android:id="@+id/text_on_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Hassan Alinezhad"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/line_1"
        app:layout_constraintEnd_toEndOf="@id/glass"
        app:layout_constraintStart_toStartOf="@id/glass"

        app:layout_constraintTop_toBottomOf="@id/c_white" />

    <TextView
        android:id="@+id/text_on_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Programmer"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/line_2"
        app:layout_constraintEnd_toEndOf="@id/glass"
        app:layout_constraintStart_toStartOf="@id/glass" />

    <TextView
        android:id="@+id/text_on_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Iran , Golestan , Gorgan"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/line_3"
        app:layout_constraintEnd_toEndOf="@id/glass"
        app:layout_constraintStart_toStartOf="@id/glass" />

    <TextView
        android:id="@+id/header_pageprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Owner Profile This app"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/glass"
        app:layout_constraintStart_toStartOf="@id/glass"
        app:layout_constraintTop_toTopOf="@id/glass" />


</androidx.constraintlayout.widget.ConstraintLayout>